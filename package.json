{
  "name": "weaver-server",
  "version": "0.5.0",
  "description": "Module providing a Weaver-compatible API server",
  "author": {
    "name": "Mohamad Alamili",
    "url": "http://weaverplatform.com",
    "email": "mail@weaverplatform.com"
  },
  "main": "lib/index.js",
  "license": "GPL-3.0",
  "repository": {},
  "dependencies": {
    "bluebird": "~3.4.1",
    "body-parser": "^1.15.0",
    "coffee-script": "^1.9.3",
    "cuid": "^1.3.8",
    "express": "^4.13.4",
    "ioredis": "2.0.1",
    "moment": "^2.13.0",
    "mustache-express": "^1.2.2",
    "request": "^2.74.0",
    "socket.io": "1.4.5",
    "tmp": "0.0.28",
    "weaver-commons-js": "0.1.4",
    "weaver-sdk": "0.4.2",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "blanket": "^1.2.3",
    "socket.io-client": "~1.4.6",
    "chai": "^3.0.0",
    "chai-as-promised": "^5.1.0",
    "coffee-coverage": "^1.0.1",
    "istanbul": "^0.4.3",
    "mocha": "^2.2.5",
    "sinon": "^1.15.4"
  },
  "engines": {
    "node": ">=0.8"
  },
  "scripts": {
    "start": "node ./lib/run.js",
    "prepublish": "./node_modules/coffee-script/bin/coffee -o lib -c src && echo '#!/usr/bin/env node' | cat - ./lib/index.js > ./lib/index-exe.js && mv ./lib/index-exe.js ./lib/index.js",
    "test": "./node_modules/.bin/mocha && ./node_modules/.bin/istanbul report"
  },
  "config": {
    "blanket": {
      "pattern": "src",
      "loader": "./node-loaders/coffee-script.js"
    }
  },
  "bin": {
    "weaver-server": "./lib/run.js"
  }
}
